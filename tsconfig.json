{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "config/mongo.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
